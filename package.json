{
  "name": "homelx-chat-app",
  "version": "1.0.0",
  "description": "Chat application with Yashaswa Varshney - Monorepo",
  "scripts": {
    "install:frontend": "cd frontend && npm install",
    "build:frontend": "cd frontend && npm run build",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && uvicorn main:app --reload --host 0.0.0.0 --port 8000",
    "build": "npm run install:frontend && npm run build:frontend",
    "start": "cd backend && uvicorn main:app --host 0.0.0.0 --port $PORT"
  },
  "workspaces": [
    "frontend"
  ]
} 